player.onChat("move", function () {
	player.say ("lets move");
    agent.teleportToPlayer()
    let distance = randint(1, 50)
    agent.move(FORWARD, distance )
    agent.move(FORWARD, -distance)
    player.say ("agent moved away " + distance + " blocks" )





})


